<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/ui_spacing_single"
    android:layout_marginEnd="@dimen/ui_spacing_single"
    android:layout_marginBottom="@dimen/ui_spacing_single"
    app:cardCornerRadius="@dimen/ui_spacing_single"
    app:cardElevation="@dimen/ui_spacing_single">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_spacing_big_double"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_spacing_half"
                android:padding="@dimen/ui_spacing_single"
                tools:text="Orest" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ui_spacing_half"
                android:gravity="right"
                android:padding="@dimen/ui_spacing_single"
                android:textColor="@color/design_default_color_error"
                tools:ignore="RtlHardcoded"
                tools:text="20:20" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_spacing_half"
            android:layout_marginEnd="@dimen/ui_spacing_half"
            android:gravity="center_vertical"
            android:padding="@dimen/ui_spacing_single"
            android:textSize="@dimen/item_message_text_size"
            tools:text="Message" />
    </LinearLayout>
</androidx.cardview.widget.CardView>